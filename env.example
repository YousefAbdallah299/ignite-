# JWT Configuration
JWT_SECRET=your-super-secure-random-256-bit-secret-key-change-this-immediately
JWT_EXPIRATION_MS=1800000

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ignite
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Paymob Configuration
PAYMOB_API_BASE=https://accept.paymob.com/api
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_INTEGRATION_ID=5352652
PAYMOB_IFRAME_ID=967648
PAYMOB_WEBHOOK_SECRET=your-webhook-secret

# H2 Console (disable in production)
H2_CONSOLE_ENABLED=false

# Environment
SPRING_PROFILES_ACTIVE=development

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Logging
LOG_LEVEL_SQL=INFO
LOG_LEVEL_TYPE=INFO
